# frozen_string_literal: true

require 'gamefic'
require 'gamefic-standard'
<% if autoloader -%>require 'gamefic-autoload'<% end %>
<% if autoloader -%>require 'autoload' if RUBY_ENGINE == 'opal'<% end %>

module <%= camelcase(name) %>
  UUID = '<%= SecureRandom.uuid %>'

<% if autoloader -%>
  <%= render_autoloader %>
<% else -%>
  require '<%= snake_case(name) %>/shared'
  require '<%= snake_case(name) %>/chapter'
  require '<%= snake_case(name) %>/plot'
  require '<%= snake_case(name) %>/subplot'
<% end -%>
end
